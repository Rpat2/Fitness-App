    {{!-- Learn about Functionality table  --}}
    {{!-- This will display to the user when they want to learn more about the funtionality of the program --}}
    <table id ="learnTable" style="display:none;" class = "center">
        <tbody>
            <tr>
                <th>Functionality</th>
                <th>More Details</th>
            </tr>
            <tr>
                <td>Generate Workout</td>
                <td>Enter your fitness level, workout type, and muscle groups and get a generated workout</td>
            </tr>

